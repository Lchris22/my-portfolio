---
import { Code2, Database, Layout, Smartphone, Server, Globe } from 'lucide-react';
---

<section id="skills" class="py-24 bg-white dark:bg-zinc-900/50">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center text-zinc-900 dark:text-white font-display">Technical Skills</h2>
    
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 text-center">
      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Layout className="w-12 h-12 text-zinc-400 group-hover:text-blue-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">OpenShift & K8s</span>
      </div>
      
      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Server className="w-12 h-12 text-zinc-400 group-hover:text-green-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">ArgoCD & GitOps</span>
      </div>
      
      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Database className="w-12 h-12 text-zinc-400 group-hover:text-purple-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">Prometheus & Grafana</span>
      </div>
      
      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Smartphone className="w-12 h-12 text-zinc-400 group-hover:text-orange-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">AWS & Azure</span>
      </div>

      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Code2 className="w-12 h-12 text-zinc-400 group-hover:text-pink-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">Java & Python</span>
      </div>
      
      <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Globe className="w-12 h-12 text-zinc-400 group-hover:text-cyan-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">Go & Shell</span>
      </div>
       <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Server className="w-12 h-12 text-zinc-400 group-hover:text-red-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">Terraform & Helm</span>
      </div>
       <div class="flex flex-col items-center gap-4 p-6 rounded-xl hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors group">
        <Layout className="w-12 h-12 text-zinc-400 group-hover:text-indigo-500 transition-colors" />
        <span class="font-medium text-zinc-900 dark:text-zinc-200">System Security</span>
      </div>
    </div>
  </div>
</section>
